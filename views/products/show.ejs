<% layout('layouts/boilerPlate') %>
<%- include('../partials/navbar') %>

    <div class="row">
            <div class="col-lg-6 mt-3">
                <div class="card shadow mx-auto" style="width: 18rem;">
                <img src="<%=foundProduct.img%>" class="card-img-top" alt="...">
                <div class="card-body">
                    <h3 class="card-name"><%=foundProduct.name%></h3>
                    <h5 class="card-price"><%=foundProduct.price%></h5>
                    <p class="card-text"><%=foundProduct.desc%></p>
                    <!-- <a href="/products" class="btn btn-sm btn-danger">Home</a> -->
                    <a href="#" class="btn btn-sm btn-secondary">Buy Product</a>
                    <a href="#" class="btn btn-sm btn-success">Add to Cart</a>
                    <a href="/products/<%=foundProduct._id%>/edit" class="btn btn-sm btn-success">Edit</a>
                </div>
                </div>
            </div>
            <div class="col-lg-4">
                <h1 class="display-5">Leave a Review</h1>
                <form action="/products/<%=foundProduct._id%>/review" method="POST">
                    <div class="mb-3">
                        <label class="form-label" for="stars">Rating:</label>
                        <input class="form-control" type="range" min="0" max="5" name="rating" id="stars"/>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="comment">Comment:</label>
                        <textarea class="form-control" row="3" name="comment" id="comment"></textarea>
                    </div>

                    <button class="btn btn-sm btn-success">Add Review</button>
                </form>

                <div class="my-3">

                   <% for(let review of foundProduct.reviews){ %>

                        <div class="card">
                            <div class="card-header">Rating: <%=review.rating%></div>
                            <div class="card-body">
                              <p class="card-text">Comment: <%=review.comment%></p>
                              <a href="#" class="btn btn-primary">Delete</a>
                            </div>
                          </div>
                        <%  } %>
                </div>
            </div>
    </div>
