<% layout('layouts/boilerPlate') %>
<%- include('../partials/navbar') %>

<fieldset>
<div class="row">
    <div class="col-lg-4 mt-3">
        <div class="card shadow mx-auto" style="width: 18rem;">
        <img src="<%=foundProduct.img%>" class="card-img-top" alt="...">
        <div class="card-body">
            <h3 class="card-name"><%=foundProduct.name%></h3>
            <h5 class="card-price"><%=foundProduct.price%></h5>
            <p class="card-text"><%=foundProduct.desc%></p>
            <!-- <a href="/products" class="btn btn-sm btn-danger">Home</a> -->
            <a href="#" class="btn btn-sm btn-secondary">Buy Product</a>
            <a href="#" class="btn btn-sm btn-success">Add to Cart</a>
            <a href="/products/<%=foundProduct._id%>/edit" class="btn btn-sm btn-success">Edit</a>
        </div>
        </div>
    </div>
    <div class="col-4 mx-auto">
        <form action="/products/<%=foundProduct._id%>?_method=PATCH" method="POST">
            <div class="mb-3">
                <label for="name">Name:</label>
                <input type="text" class="form-control" name="name" id="name" placeholder="Name of the product" value="<%=foundProduct.name%>">
            </div>
            <div class="mb-3">
                <label for="img">Image:</label>
                <input type="text" class="form-control" name="img" id="img" placeholder="Image URL of the product" value="<%=foundProduct.img%>">
            </div>
            <div class="mb-3">
                <label for="price">Price:</label>
                <input type="text" class="form-control" name="price" id="price" placeholder="Price of the product" value="<%=foundProduct.price%>">
            </div>
            <div class="mb-3">
                <label for="desc">Description:</label>
                <textarea class="form-control" name="desc" id="desc" rows="5" placeholder="Description of the product"><%=foundProduct.desc%></textarea>
            </div>
            <button class="btn btn-sm btn-success" type="submit">Edit Product</button>
        </form>
    </div>
</div>
</fieldset>
