<% layout('layouts/boilerPlate') %>
<%- include('../partials/navbar') %>

<fieldset>
<div class="row">
    <div class="col-6 mx-auto">
        <form action="/products" method="POST">
            <div class="mb-3">
                <label for="name">Name:</label>
                <input type="text" class="form-control" name="name" id="name" placeholder="Name of the product" value="<%foundProduct.name%>">
            </div>
            <div class="mb-3">
                <label for="img">Image:</label>
                <input type="text" class="form-control" name="img" id="img" placeholder="Image URL of the product" value="<%foundProduct.img%>">
            </div>
            <div class="mb-3">
                <label for="price">Price:</label>
                <input type="text" class="form-control" name="price" id="price" placeholder="Price of the product" value="<%foundProduct.price%>">
            </div>
            <div class="mb-3">
                <label for="desc">Description:</label>
                <textarea class="form-control" name="desc" id="desc" rows="5" placeholder="Description of the product"><%foundProduct.desc%></textarea>
            </div>
            <button class="btn btn-sm btn-success" type="submit">Add Product</button>
        </form>
    </div>
</div>
</fieldset>
